<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity4">

    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="180dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@drawable/butonvoltar"
            android:draw
            android:drawableLeft="@drawable/baseline_arrow_back_24">

        <ProgressBar
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ProgressBar>

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qual a sua data de nascimento?"
        android:gravity="center"/>

    <DatePicker android:id="@+id/datanascimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continuar"
        android:layout_width="193dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/background_color2"
        android:textColor="@color/black"
        android:textSize="13dp"
        android:textAllCaps="false"
        android:text="Continuar"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>