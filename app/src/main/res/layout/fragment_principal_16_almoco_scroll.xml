<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Frango Grelhado"
            app:calorias="101"
            app:urlReceita="https://guibon.com.br/receitas/file-de-frango-guibon-marinado-e-grelhado-com-legumes-e-molho-de-mostarda-e-iogurte/"
            app:urlImage="@drawable/prato_p_almoco_1"/>

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Macarrão \n com Brócolis"
            app:calorias="154"
            app:urlReceita="https://blog.totalpass.com.br/alimentacao/receitas-para-o-almoco-8-opcoes/"
            app:urlImage="@drawable/prato_p_almoco_2"/>

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Peixe ao Vinagrete"
            app:calorias="284"
            app:urlReceita="https://panelaterapia.com/peixe-ao-vinagrete/"
            app:urlImage="@drawable/prato_p_almoco_3"/>
    </LinearLayout>

</FrameLayout>
