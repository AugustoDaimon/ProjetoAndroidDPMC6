<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cadastro.Cadastro2EmailSenhaFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite seu Email:"
            android:textSize="22sp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/txtCampoEmail"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:inputType="textWebEmailAddress"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView_AvisoErro"
            android:text="Email inválido"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite sua Senha:"
            android:textSize="22sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"/>

        <EditText
            android:id="@+id/txtCampoSenha"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextView_AvisoErro"
            android:text="Senha inválida"
            android:visibility="gone"
            />
    </LinearLayout>
</FrameLayout>