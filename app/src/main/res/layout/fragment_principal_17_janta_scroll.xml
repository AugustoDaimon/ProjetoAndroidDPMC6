<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Peixe Grelhado\nCom Aspargos"
            app:calorias="101"
            app:urlReceita="https://www.receitasnestle.com.br/receitas/peixe-grelhado-com-aspargos"
            app:urlImage="@drawable/prato_p_janta_1"/>

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginVertical="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Tabule de Quinoa"
            app:calorias="154"
            app:urlReceita="https://www.maeterra.com.br/receitas/tabule-de-quinoa.html"
            app:urlImage="@drawable/prato_p_janta_3"/>

        <com.example.nutzen.PratosDoDia.PratosCardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            app:cardCornerRadius="20dp"
            app:nomePrato="Frango Assado\nCom Batata doce"
            app:calorias="284"
            app:urlReceita="https://www.vidaativa.pt/frango-com-batata-doce/"
            app:urlImage="@drawable/prato_p_janta_2"/>
    </LinearLayout>
</FrameLayout>
