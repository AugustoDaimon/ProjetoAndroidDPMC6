<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SeekBar_ProgCadastro" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressDrawable">@drawable/seekbar_progcadastro</item>
        <item name="android:thumb">@drawable/seekbar_selector_progcadastro</item>
        <item name="android:progress">0</item>
        <item name="android:max">100</item>
    </style>

    <style name="TextView_AvisoFormat" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:font">@font/langar</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">6dp</item>
    </style>

    <style name="TextView_AvisoInfo" parent="TextView_AvisoFormat">
        <item name="android:drawableLeft">@drawable/ic_info_18</item>
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextView_AvisoErro" parent="TextView_AvisoFormat">
        <item name="android:drawableLeft">@drawable/ic_error_18</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>